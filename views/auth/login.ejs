<div class="row justify-content-center auth-page">
    <div class="col-md-6 col-lg-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold">
                <span class="mercury-logo">â˜¿</span>
                Mercury
            </h1>
            <p class="text-muted">Device Management System</p>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Login</h4>
            </div>
            <div class="card-body">
                <% if (locals.error) { %>
                    <div class="alert alert-danger">
                        <% if (error === 'Your account is waiting for admin approval') { %>
                            <strong>Account Pending:</strong> Your account needs to be activated by an administrator.
                        <% } else { %>
                            <%= error %>
                        <% } %>
                    </div>
                <% } %>
                
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
                
                <div class="text-center mt-4">
                    <p class="mb-0">Don't have an account? <a href="/auth/register">Register</a></p>
                </div>
            </div>
        </div>
    </div>
</div> 